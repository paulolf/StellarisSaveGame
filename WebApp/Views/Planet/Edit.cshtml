@model WebApp.Models.Planet

@{
    ViewData["Title"] = "Edit Planet";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 mb-0">Edit Planet</h1>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Planets
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Type" />
                        <input type="hidden" asp-for="Class" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">Planet Name</label>
                                <input asp-for="Name" class="form-control form-control-lg" disabled />
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Size" class="form-label">Planet Size</label>
                                <input asp-for="Size" class="form-control form-control-lg" />
                                <span asp-validation-for="Size" class="text-danger"></span>
                                <div class="form-text">Enter a value between 12 and 25</div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6">
                                <label class="form-label">Planet Type</label>
                                <input value="@Model.Type" class="form-control" disabled />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Planet Class</label>
                                <input value="@Model.Class" class="form-control" disabled />
                            </div>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
