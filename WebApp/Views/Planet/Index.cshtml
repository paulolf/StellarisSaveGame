@model IEnumerable<WebApp.Models.Planet>
@{
    ViewData["Title"] = "Planets";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 mb-0">Planets</h1>
                <a asp-page="/Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Save Game
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Size</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var planet in Model)
                                {
                                    <tr>
                                        <td class="align-middle">
                                            <strong>@planet.Name</strong>
                                        </td>
                                        <td class="align-middle">@planet.Size</td>
                                        <td class="text-end">
                                            <a asp-action="Edit" asp-route-id="@planet.Id" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
